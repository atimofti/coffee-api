# EditorConfig is awesome: http://EditorConfig.org
# Uses editorconfig to maintain consistent coding styles

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 128
trim_trailing_whitespace = true

[*.{tf,tfvars,hcl}]
indent_size = 2
indent_style = space
max_line_length = 1024

[*.sh]
indent_style = space
indent_size = 2
max_line_length = 256

[*.gitignore]
max_line_length = 128

[*.tpl]
max_line_length = 128

[*.rb]
max_line_length = 128

[*.{yml,yaml}]
intent_style = space
indent_size = 2
max_line_length = 128

[*.md]
max_line_length = 1024
trim_trailing_whitespace = false

[*.json]
max_line_length = 3072

[*.py]
max_line_length = 1024

[Dockerfile]
max_line_length = 256

[Makefile]
tab_width = 2
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
